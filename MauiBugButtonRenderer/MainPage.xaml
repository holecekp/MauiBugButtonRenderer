<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiBugButtonRenderer"
             x:Class="MauiBugButtonRenderer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="30,30">

            <StackLayout Orientation="Horizontal">
                <Button Text="First button" />
                <Button Text="Second button" />
                <Button Text="Third button" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <local:MyButton Text="First button" />
                <local:MyButton Text="Second button" />
                <local:MyButton Text="Third button" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
